%section.main-content
  .container
    .row
      =render 'shared/adminmenu'
      .col-md-12
        = flash_messages
        %h1 
          =@users.count
          Usuarios
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th{:colspan => "3"}
          %tbody
            - @users.each do |user|
              %tr
                %td= user.email
                %td= link_to 'Show', '/users/'+user.id.to_s
                %td= link_to 'Edit', '/users/'+user.id.to_s+'/edit'
                %td= link_to 'Destroy', '/users/'+user.id.to_s+'/destroy', method: :delete, data: { confirm: 'Are you sure?' }
        %br/
        = link_to 'New user', '/signup'