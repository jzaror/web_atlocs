%section.main-content
	.container
		.row.padding
			= flash_messages
			.col-md-8
				%h1
					-if current_user && @user==current_user
						Hola
					%strong #{@user.full_name}
				-if current_user && current_user.status=='admin' || current_user && @user==current_user && (can? :manage, User, user_id: current_user.id)
					%ul.user-info
						%li
							%i.mdi.mdi-lg.mdi-email
							#{@user.email}
						%li
							%i.mdi.mdi-lg.mdi-phone
							+56 #{@user.phone}
					%a.btn.btn-xs.btn-info{:href => "/users/#{@user.id}/edit"}
						%i.mdi.mdi-pencil
						Editar perfil	
				%hr
				%h2 
					-if current_user && @user==current_user
						Mis 
					%strong Locaciones
				.row.user-location-list
					- @user.locations.where(:status=>[0,3]).each do |location|
						.col-sm-6.col-md-4
							.thumbnail.thumbnail-reset.location-preview
								.image	
									%span.badge.price
										%strong CLP
										= number_to_currency(location.totalprice, :unit => "$", :precision => 0)
									=link_to image_tag(location.thumbnail(350,230), :class=>"collection-img"), location_path(location)
								.caption
									%div.label.label-danger= location.status
									%h3.title
										= link_to location.title, location_path(location)
									%p.desc
										= location.description
									= link_to 'editar', edit_location_path(location)
			-if current_user && @user==current_user
				.col-md-4
					%h4 Mis Reservas
					-if @user.bookings
						%div.list-group
							-@user.bookings.each do |booking|
								%a.list-group-item{:href=>'/bookings/'+booking.code}
									%b=booking.location.title
									%br
									"#{number_to_currency(booking.price, :unit => "$", :precision => 0)} x #{booking.totaldays} dÃ­a(s)"
									%span.badge
										=booking.statusname
							%li.list-group-item
								=link_to "Ver mis reservas", "/bookings"